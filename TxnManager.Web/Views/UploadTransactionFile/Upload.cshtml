<form id="uploadForm" asp-action="Upload" asp-controller="UploadTransactionFile" method="post" enctype="multipart/form-data">
    <input type="file" name="doc.FormFile" /><br>
    <input id="process" type="submit" value="Upload" />
</form>

<div id="loading" class="spinner-border" role="status">
    <span class="sr-only">Loading...</span>
</div>

<div asp-validation-summary="All"></div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $("#loading").hide();

            $('#process').click(function() {
                $('#uploadForm').submit();
            });

            $("#uploadForm").submit(function() {
                $("#loading").show();
            });
        });
    </script>
}